#include <stdio.h>
#include <string.h>

struct Item {
    char nome[50];
    char tipo[30];
    int quantidade;
};

int main() {
    struct Item mochila[10];
    int total = 0;
    int opcao;

    do {
        printf("\n===== MOCHILA =====\n");
        printf("1 - Adicionar item\n");
        printf("2 - Remover item\n");
        printf("3 - Listar itens\n");
        printf("0 - Sair\n");
        printf("Escolha: ");
        scanf("%d", &opcao);
        getchar(); // limpa o ENTER

        switch (opcao) {

        case 1:
            if (total >= 10) {
                printf("Mochila cheia! Nao eh possivel adicionar mais itens.\n");
                break;
            }

            printf("\nNome do item: ");
            fgets(mochila[total].nome, 50, stdin);
            mochila[total].nome[strcspn(mochila[total].nome, "\n")] = '\0';

            printf("Tipo do item: ");
            fgets(mochila[total].tipo, 30, stdin);
            mochila[total].tipo[strcspn(mochila[total].tipo, "\n")] = '\0';

            printf("Quantidade: ");
            scanf("%d", &mochila[total].quantidade);
            getchar();

            total++;
            printf("Item adicionado!\n");
            break;

        case 2: {
            if (total == 0) {
                printf("A mochila esta vazia.\n");
                break;
            }

            char nomeRemover[50];
            printf("Digite o nome do item para remover: ");
            fgets(nomeRemover, 50, stdin);
            nomeRemover[strcspn(nomeRemover, "\n")] = '\0';

            int encontrado = -1;
            for (int i = 0; i < total; i++) {
                if (strcmp(mochila[i].nome, nomeRemover) == 0) {
                    encontrado = i;
                    break;
                }
            }

            if (encontrado == -1) {
                printf("Item nao encontrado!\n");
            } else {
                for (int i = encontrado; i < total - 1; i++) {
                    mochila[i] = mochila[i + 1];
                }
                total--;
                printf("Item removido!\n");
            }
            break;
        }

        case 3:
            if (total == 0) {
                printf("Mochila vazia!\n");
            } else {
                printf("\n===== ITENS NA MOCHILA =====\n");
                for (int i = 0; i < total; i++) {
                    printf("\nItem %d:\n", i + 1);
                    printf("Nome: %s\n", mochila[i].nome);
                    printf("Tipo: %s\n", mochila[i].tipo);
                    printf("Quantidade: %d\n", mochila[i].quantidade);
                }
            }
            break;

        case 0:
            printf("Saindo...\n");
            break;

        default:
            printf("Opcao invalida!\n");
        }

    } while (opcao != 0);

    return 0;
}
